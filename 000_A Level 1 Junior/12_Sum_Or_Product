import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		int c=sc.nextInt();

		if(c==1){
			System.out.println(n*(n+1)/2);

		}
		else if(c==2){
			int mul=1;
			for(int i=1;i<=n;i++){
				mul*=i;
			}
			System.out.println(mul);
		}
		else{
			System.out.println(-1);
		}

	}
}
